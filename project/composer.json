{
  "name": "87oui/wordpress",
  "type": "project",
  "license": "MIT",
  "description": "",
  "config": {
    "vendor-dir": "public/vendor/"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://wpackagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "advanced-custom-fields/advanced-custom-fields-pro",
        "version": "1.2.3",
        "type": "wordpress-plugin",
        "dist": {
          "type": "zip",
          "url": "https://connect.advancedcustomfields.com/index.php?a=download&p=pro&k={%PLUGIN_ACF_KEY}"
        },
        "require": {
          "composer/installers": "^1.4",
          "ffraenz/private-composer-installer": "^5.0"
        }
      }
    }
  ],
  "require": {
    "composer/installers": "^1.4",
    "johnpbloch/wordpress": "^5.7",
    "vlucas/phpdotenv": "^5.2",
    "advanced-custom-fields/advanced-custom-fields-pro": "^1.2",
    "wpackagist-plugin/akismet": "^4.1",
    "wpackagist-plugin/duplicate-post": "^4.1",
    "wpackagist-plugin/intuitive-custom-post-order": "^3.1",
    "wpackagist-plugin/mw-wp-form": "^4.0",
    "wpackagist-plugin/wp-mail-smtp": "^2.6",
    "wpackagist-plugin/wp-multibyte-patch": "^2.8"
  },
  "require-dev": {},
  "extra": {
    "wordpress-install-dir": "public/wp",
    "installer-paths": {
      "plugins/{$name}/": [
        "type:wordpress-plugin"
      ],
      "themes/{$name}/": [
        "type:wordpress-theme"
      ]
    }
  },
  "scripts": {
    "link": [
      "rm -rf public/wp/wp-content/themes",
      "ln -s ../../../themes public/wp/wp-content/",
      "rm -rf public/wp/wp-content/plugins",
      "ln -s ../../../plugins public/wp/wp-content/",
      "rm -rf public/wp/wp-content/mu-plugins",
      "ln -s ../../../mu-plugins public/wp/wp-content/"
    ],
    "post-install-cmd": [
      "@link"
    ]
  }
}
