{% if posts.pagination.pages is not empty %}
  <nav class="">
    <ol class="">
      {% for page in posts.pagination.pages %}
        <li class="">
          {% if page.link %}
            <a class="{{ page.class }}" href="{{ page.link }}">{{ page.title }}</a>
          {% else %}
            <span class="{{ page.class }}">{{ page.title }}</span>
          {% endif %}
        </li>
      {% endfor %}
    </ol>
  </nav>
{% endif %}
